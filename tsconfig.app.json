{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@stores/*": ["./src/stores/*"],
      "@defs/*": ["./src/defs/*"],
      "@utils/*": ["./src/utils/*"],
      "@public/*": ["./public/*"],
      "@src/*": ["./src/*"],
    }
  }
}
